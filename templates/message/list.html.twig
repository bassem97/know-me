{% extends 'base.html.twig' %}

{% block title %} Hello MessageController!{% endblock %}

{% block body %}
<h1>Liste des messages</h1> 
<p><a href="{{ path('sendMessage')}}">envoyer un message</a></p>
{% for message in messages %}
    <table>
        <thead>
            <th>Content</th>
            <th>Date</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </thead>
        <tbody>
            <td>{{ message.Content }}</td>
            <td>{{ message.date|date("d/m/Y")}}</td>
            <td><a href="{{path('modifyMessage',{'id': message.id})}}">Modifier</a></td>
            <td><a href="{{path('deleteMessage', {'id': message.id}) }}">Supprimer</a></td>
        </tbody>
    </table>
{% endfor %}
{% endblock %}